<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    tools:context="com.example.RechenpateApp.MainActivity">
    <ImageView
        android:id="@+id/viewImage"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!-- Main content -->

    <com.example.RechenpateApp.PaintView
        android:id="@+id/paint_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="truePaintView" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="5dp"
            android:visibility="visible"
            android:src="@drawable/ic_add_a_photo_24px"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnDeletePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:src="@drawable/ic_delete_forever_24px"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSelectPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:src="@drawable/ic_image_search_24px"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:src="@drawable/ic_photo_camera_24px"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:src="@drawable/ic_photo_camera_24px"
            />

    </LinearLayout>
</RelativeLayout>